<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
 <mapper namespace="com.pickme.beeze.product.dao.ProductDao">
 
 <select id="productlist" parameterType="com.pickme.beeze.product.dto.ProductDto" resultType="com.pickme.beeze.product.dto.ProductDto">
 	select id, name, price, detail, url
 	from product
 	order by id asc
 </select>
 
 
 <select id = "productdetail" parameterType="Integer" resultType="com.pickme.beeze.product.dto.ProductDto">
 	select id, name, price, detail, url
 	from product
 	where id=#{id}
 </select>
 
 
 
 
 
 
 </mapper>
 